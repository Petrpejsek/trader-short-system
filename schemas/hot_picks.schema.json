{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Hot Picks Response",
  "description": "Schema for GPT-5 hot screener response",
  "version": "1.0.0",
  "type": "object",
  "properties": {
    "hot_picks": {
      "type": "array",
      "minItems": 0,
      "maxItems": 5,
      "items": {
        "type": "object",
        "properties": {
          "symbol": {
            "type": "string",
            "pattern": "^[A-Z0-9]+USDT$",
            "description": "Trading symbol ending with USDT"
          },
          "rating": {
            "type": "string",
